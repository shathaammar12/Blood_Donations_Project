@model Blood_Donations_Project.Models.Donor
@using Blood_Donations_Project.Models

@{
    ViewData["Title"] = "Request Donation";

    string donorName = Model?.User?.FullName ?? "-";
    string donorEmail = Model?.User?.Email ?? "-";
    string donorMobile = Model?.User?.MobileNo ?? "-";
    string bloodType = Model?.BloodType?.TypeName ?? "-";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Request Donation</h2>
            <div class="text-muted">Submit your donation request for admin approval</div>
        </div>

        <a asp-controller="Admin"
           asp-action="Dashboard"
           class="btn btn-wine text-white">
            Go Back
        </a>
    </div>


    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-wine-info alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card card-wine mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                <i class="bi bi-person-badge me-2"></i> Your Information
            </h5>

            <span class="badge badge-wine text-white px-3 py-2">
                <i class="bi bi-droplet-half me-1"></i> @bloodType
            </span>
        </div>

        <div class="card-body">
            <div class="row g-3">

                <div class="col-md-6">
                    <div class="info-row">
                        <div class="info-icon">
                            <i class="bi bi-person"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Name</div>
                            <div class="fw-semibold">@donorName</div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-row">
                        <div class="info-icon">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Email</div>
                            <div class="fw-semibold">@donorEmail</div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-row">
                        <div class="info-icon">
                            <i class="bi bi-telephone"></i>
                        </div>
                        <div>
                            <div class="text-muted small">Mobile</div>
                            <div class="fw-semibold">@donorMobile</div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 d-flex align-items-center">
                    <div class="alert alert-wine mb-0 w-100">
                        <i class="bi bi-shield-check me-2"></i>
                        Your request will be reviewed by the admin.
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="card card-wine">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-send me-2"></i> Submit Donation Request
            </h5>
        </div>

        <div class="card-body">

            <form asp-controller="Donor"
                  asp-action="RequestDonation"
                  method="post">

                @Html.AntiForgeryToken()

                <p class="text-muted mb-4">
                    Click submit to create a new donation request.
                </p>

                <div class="d-flex gap-2 flex-wrap">
                    <button type="submit"
                            class="btn btn-wine px-4">
                        <i class="bi bi-check-circle me-1"></i>
                        Submit Request
                    </button>

                </div>

            </form>

        </div>
    </div>

</div>
