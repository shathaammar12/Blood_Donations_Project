<!DOCTYPE html>
<style>
    html, body {
        height: 100%;
    }

    body {
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
    }

    .navbar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 6px;
        font-weight: 500;
    }
</style>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Blood Donation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>

    <!-- Navbar -->
    @using Microsoft.AspNetCore.Http
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        var role = Context.Session.GetString("UserRole");
        var isLoggedIn = !string.IsNullOrWhiteSpace(role);

        bool isDashboardActive = (currentController == "Admin" && currentAction == "Dashboard");
        bool isLoginActive = (currentController == "Account" && currentAction == "Login");
        bool isRegisterActive = (currentController == "Account" && currentAction == "Register");
        bool isProfileActive = (currentController == "Account" && currentAction == "Profile");
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-danger shadow">
        <div class="container">

            <a class="navbar-brand fw-bold" href="@(isLoggedIn ? "/Admin/Dashboard" : "/Account/Login")">
                Blood Donation
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- Left -->
                <ul class="navbar-nav me-auto">
                    @if (isLoggedIn)
                    {
                            <li class="nav-item">
                                <a class="nav-link @(isDashboardActive ? "active" : "")"
                                   href="/Admin/Dashboard">Dashboard</a>
                            </li>
                    }
                </ul>

                <!-- Right -->
                <ul class="navbar-nav ms-auto">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(isProfileActive ? "active" : "")"
                               href="/Account/Profile">
                                My Profile
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Logout</a>
                        </li>
                    }
                </ul>


            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5">
        <div class="container py-3 text-center">
            <p class="mb-0">© 2026 Blood Donation Management System. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
