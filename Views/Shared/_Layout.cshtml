<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Blood Donation</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        :root {
            --wine: #5A0F1B;
            --wine-2: #7b1626;
        }

        .navbar-wine {
            background: linear-gradient(135deg, var(--wine), var(--wine-2));
        }

        .navbar-brand {
            font-size: 1.4rem;
            font-weight: 700;
            letter-spacing: .5px;
        }

            .navbar-brand i {
                font-size: 1.3rem;
                margin-right: 6px;
            }

        .navbar .nav-link {
            font-weight: 500;
            transition: .2s;
        }

            .navbar .nav-link:hover {
                opacity: .85;
            }

            .navbar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.2);
                border-radius: 6px;
            }
    </style>

</head>
<body>

    @using Microsoft.AspNetCore.Http
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        var role = Context.Session.GetString("UserRole");
        var isLoggedIn = !string.IsNullOrWhiteSpace(role);

        bool isDashboardActive = (currentController == "Admin" && currentAction == "Dashboard");
        bool isProfileActive = (currentController == "Account" && currentAction == "Profile");

        bool isAuthPage = (currentController == "Account" &&
                          (currentAction == "Login" || currentAction == "Register" || currentAction == "ForgotPassword"));
    }

    @if (isLoggedIn)
    {
        <nav class="navbar navbar-expand-lg navbar-dark navbar-wine shadow">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="/Admin/Dashboard">
                    <i class="bi bi-droplet-half"></i>
                    Blood Donation System
                </a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(isDashboardActive ? "active" : "")"
                               href="/Admin/Dashboard">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(isProfileActive ? "active" : "")"
                               href="/Account/Profile">
                                <i class="bi bi-person-circle me-1"></i> My Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        </li>
                    </ul>


                </div>
            </div>
        </nav>
    }

    <main class="@(isAuthPage ? "" : "container mt-4")">
        @RenderBody()
    </main>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
