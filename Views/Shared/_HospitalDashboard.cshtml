@using Blood_Donations_Project.Models
@{
    ViewData["Title"] = "Hospital Dashboard";

    User? user = ViewBag.User as User;
    var bloodTypeMap = ViewBag.BloodTypeMap as Dictionary<int, string> ?? new Dictionary<int, string>();
    var hospitalRequests = ViewBag.HospitalRequests as List<BloodRequest> ?? new List<BloodRequest>();

    string FormatDate(DateOnly? d) => d.HasValue ? d.Value.ToString("dd/MM/yyyy") : "-";

    string GetBloodTypeName(int? id)
    {
        if (!id.HasValue) return "-";
        return bloodTypeMap.TryGetValue(id.Value, out var name) ? name : id.Value.ToString();
    }
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="section-title"><i class="bi bi-hospital-fill me-2"></i>Hospital Dashboard</h2>
            <div class="text-muted">Manage and track your blood requests</div>
        </div>

        <a asp-controller="Hospital"
           asp-action="RequestBlood"
           class="btn btn-wine">
            <i class="bi bi-plus-circle me-1"></i> Request Blood
        </a>
    </div>


    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-wine-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"></button>
        </div>
    }


    <!-- Requests Card -->
    <div class="card card-wine">

        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                <i class="bi bi-list-check me-2"></i> My Blood Requests
            </h5>
        </div>

        <div class="card-body">

            @if (hospitalRequests != null && hospitalRequests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle table-wine mb-0">
                        <thead>
                            <tr>
                                <th>SN</th>
                                <th>Blood Type</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Request Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sn = 1;
                            }

                            @foreach (var r in hospitalRequests)
                            {
                                var st = r.Status ?? "";

                                <tr>
                                    <td>@sn</td>

                                    <td>
                                        <span class="badge badge-wine text-white">
                                            @GetBloodTypeName(r.BloodTypeId)
                                        </span>
                                    </td>

                                    <td>
                                        <span class="fw-semibold">
                                            @(r.Quantity?.ToString() ?? "-")
                                        </span>
                                    </td>

                                    <td>
                                        @if (st.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (st.Equals("Approved", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge badge-wine text-white">Approved</span>
                                        }
                                        else if (st.Equals("Rejected", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                @(!string.IsNullOrWhiteSpace(st) ? st : "-")
                                            </span>
                                        }
                                    </td>

                                    <td>
                                        <span class="text-muted">
                                            @FormatDate(r.RequestDate)
                                        </span>
                                    </td>
                                </tr>

                                sn++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-wine mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    No blood requests submitted yet.
                </div>
            }

        </div>
    </div>

</div>
