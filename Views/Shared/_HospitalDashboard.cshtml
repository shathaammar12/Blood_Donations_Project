@using Blood_Donations_Project.Models
@{
    ViewData["Title"] = "Hospital Dashboard";
    User? user = ViewBag.User as User;
    var bloodTypeMap = ViewBag.BloodTypeMap as Dictionary<int, string> ?? new Dictionary<int, string>();
    var hospitalRequests = ViewBag.HospitalRequests as List<BloodRequest> ?? new List<BloodRequest>();

    string FormatDate(DateOnly? d) => d.HasValue ? d.Value.ToString("dd/MM/yyyy") : "-";
    string GetBloodTypeName(int? id)
    {
        if (!id.HasValue) return "-";
        return bloodTypeMap.TryGetValue(id.Value, out var name) ? name : id.Value.ToString();
    }
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Hospital Dashboard</h2>
        <a asp-controller="Hospital" asp-action="RequestBlood" class="btn btn-danger">
            Request Blood
        </a>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="card shadow-sm border-danger border-2">
        <div class="card-header bg-danger text-white">
            <strong>My Blood Requests</strong>
        </div>
        <div class="card-body">
            @if (hospitalRequests != null && hospitalRequests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>SN</th>
                                <th>Blood Type</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Request Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sn = 1;
                            }
                            @foreach (var r in hospitalRequests)
                            {
                                var st = r.Status ?? "";
                                <tr>
                                    <td>@sn</td>
                                    <td><span class="badge bg-danger">@GetBloodTypeName(r.BloodTypeId)</span></td>
                                    <td>@(r.Quantity?.ToString() ?? "-")</td>
                                    <td>
                                        @if (st.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (st.Equals("Approved", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (st.Equals("Rejected", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@(!string.IsNullOrWhiteSpace(st) ? st : "-")</span>
                                        }
                                    </td>
                                    <td>@FormatDate(r.RequestDate)</td>
                                </tr>
                                sn++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    No requests yet.
                </div>
            }
        </div>
    </div>
</div>