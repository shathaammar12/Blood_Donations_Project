@model IEnumerable<Blood_Donations_Project.Models.DonationRequest>
@using Blood_Donations_Project.Models

@{
    ViewData["Title"] = "Donor Dashboard";

    bool canDonate = ViewBag.CanDonate is bool b && b;
    Donation? lastDonation = ViewBag.LastDonation as Donation;
    Donor? donor = ViewBag.Donor as Donor;

    string FormatDate(DateOnly? d) => d.HasValue ? d.Value.ToString("dd/MM/yyyy") : "-";

    string donorName = donor?.User?.FullName ?? "-";
    string donorEmail = donor?.User?.Email ?? "-";
    string donorMobile = donor?.User?.MobileNo ?? "-";
    string bloodType = donor?.BloodType?.TypeName ?? "-";
}

<div class="container mt-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Donor Dashboard</h2>

        @if (canDonate)
        {
            <a asp-controller="Donor" asp-action="RequestDonation" class="btn btn-danger">
                Request New Donation
            </a>
        }
        else
        {
            <button class="btn btn-secondary" disabled>Request not available now</button>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Info -->
    <div class="card border-danger shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Your Information</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="p-3 bg-light rounded">
                        <p class="mb-1"><strong>Name:</strong> @donorName</p>
                        <p class="mb-1"><strong>Email:</strong> @donorEmail</p>
                        <p class="mb-0"><strong>Mobile:</strong> @donorMobile</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-light rounded">
                        <p class="mb-2">
                            <strong>Blood Type:</strong>
                            <span class="badge bg-danger fs-6">@bloodType</span>
                        </p>

                        <p class="mb-1">
                            <strong>Last Approved Donation:</strong>
                            @if (lastDonation?.DonationDate != null)
                            {
                                <span>@FormatDate(lastDonation.DonationDate)</span>
                            }
                            else
                            {
                                <span>Never donated</span>
                            }
                        </p>

                        <p class="mb-0">
                            <strong>Status:</strong>
                            @if (canDonate)
                            {
                                <span class="badge bg-success">Available to request</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Must wait 3 months from last request</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Requests Table -->
    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">My Donation Requests</h5>
            <span class="text-muted small">Latest first</span>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>SN</th>
                                <th>Request Date</th>
                                <th>Status</th>
                                <th>Approved Date</th>
                                <th>Approved By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sn = 1;
                             }
                            @foreach (var r in Model)
                            {
                                var st = r.Status ?? "";
                                <tr>
                                    <td>@sn</td>
                                    <td>@r.RequestDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (st.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (st.Equals("Approved", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (st.Equals("Rejected", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@(!string.IsNullOrWhiteSpace(st) ? st : "-")</span>
                                        }
                                    </td>
                                    <td>@FormatDate(r.ApprovedDate)</td>
                                    <td>@(r.ApprovedByNavigation?.UserName ?? "-")</td>
                                </tr>
                                sn++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    You haven't submitted any donation requests yet.
                </div>
            }
        </div>
    </div>

</div>
