@model IEnumerable<Blood_Donations_Project.Models.DonationRequest>
@using Blood_Donations_Project.Models
@using System.Linq

@{
    ViewData["Title"] = "Donor Dashboard";

    bool canDonate = ViewBag.CanDonate is bool b && b;

    string FormatDate(DateOnly? d) => d.HasValue ? d.Value.ToString("dd/MM/yyyy") : "-";

    int total = Model?.Count() ?? 0;
    int pending = Model?.Count(x => (x.Status ?? "").Trim().Equals("Pending", StringComparison.OrdinalIgnoreCase)) ?? 0;
    int approved = Model?.Count(x => (x.Status ?? "").Trim().Equals("Approved", StringComparison.OrdinalIgnoreCase)) ?? 0;
    int rejected = Model?.Count(x => (x.Status ?? "").Trim().Equals("Rejected", StringComparison.OrdinalIgnoreCase)) ?? 0;
}

<div class="container mt-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="section-title"><i class="bi bi-person-heart me-2"></i>Donor Dashboard</h2>
            <div class="text-muted">Track your donation requests and status</div>
        </div>

        <div class="d-flex gap-2">
            @if (canDonate)
            {
                <a asp-controller="Donor" asp-action="RequestDonation" class="btn btn-wine">
                    <i class="bi bi-plus-circle me-1"></i> Donate Now
                </a>
            }
            else
            {
                <button class="btn btn-secondary" disabled>
                    <i class="bi bi-clock me-1"></i> Not available now
                </button>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-wine-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-wine-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Mini Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-top">
                    <div class="stat-left">
                        <div class="stat-icon"><i class="bi bi-list-ul"></i></div>
                        <div>
                            <p class="stat-label">Total</p>
                            <p class="stat-value">@total</p>
                        </div>
                    </div>
                    <span class="badge badge-soft-wine">All</span>
                </div>
                <div class="stat-body">All submitted requests.</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-top">
                    <div class="stat-left">
                        <div class="stat-icon"><i class="bi bi-hourglass-split"></i></div>
                        <div>
                            <p class="stat-label">Pending</p>
                            <p class="stat-value">@pending</p>
                        </div>
                    </div>
                    <span class="badge badge-soft-wine">Waiting</span>
                </div>
                <div class="stat-body">Waiting for admin decision.</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-top">
                    <div class="stat-left">
                        <div class="stat-icon"><i class="bi bi-check2-circle"></i></div>
                        <div>
                            <p class="stat-label">Approved</p>
                            <p class="stat-value">@approved</p>
                        </div>
                    </div>
                    <span class="badge badge-soft-wine">Done</span>
                </div>
                <div class="stat-body">Approved donation requests.</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-top">
                    <div class="stat-left">
                        <div class="stat-icon"><i class="bi bi-x-circle"></i></div>
                        <div>
                            <p class="stat-label">Rejected</p>
                            <p class="stat-value">@rejected</p>
                        </div>
                    </div>
                    <span class="badge badge-soft-wine">Closed</span>
                </div>
                <div class="stat-body">Requests that were rejected.</div>
            </div>
        </div>
    </div>

    <!-- Requests Table -->
    <div class="card card-wine">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0"><i class="bi bi-list-check me-2"></i> My Donation Requests</h5>
            <span class="badge badge-soft-wine text-white">Total: @total</span>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle table-wine mb-0">
                        <thead>
                            <tr>
                                <th>SN</th>
                                <th>Request Date</th>
                                <th>Status</th>
                                <th>Decision Date</th>
                                <th>Decision Made By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sn = 1;
                            }
                            @foreach (var r in Model)
                            {
                                var st = (r.Status ?? "").Trim();
                                <tr>
                                    <td>@sn</td>
                                    <td>@r.RequestDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (st.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (st.Equals("Approved", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (st.Equals("Rejected", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@(!string.IsNullOrWhiteSpace(st) ? st : "-")</span>
                                        }
                                    </td>
                                    <td>@FormatDate(r.ApprovedDate)</td>
                                    <td>@(r.ApprovedByNavigation?.UserName ?? "-")</td>
                                </tr>
                                sn++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-wine mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    You haven't submitted any donation requests yet.
                </div>
            }
        </div>
    </div>

</div>
