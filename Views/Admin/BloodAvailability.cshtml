@model List<Blood_Donations_Project.Models.BloodInventory>

@{
    ViewData["Title"] = "Blood Availability";
    int sn = 1;
}

<style>
    :root {
        --wine: #5A0F1B;
        --wine-2: #7b1626;
        --wine-soft: rgba(90,15,27,.06);
        --wine-border: rgba(90,15,27,.18);
    }

    body {
        background: radial-gradient(circle at top left, rgba(90,15,27,.12), transparent 60%),
                    linear-gradient(135deg, rgba(90,15,27,.06), rgba(90,15,27,.02));
        background-attachment: fixed;
    }

    .card-wine {
        border-radius: 18px;
        overflow: hidden;
        border: 1px solid var(--wine-border);
        box-shadow: 0 12px 40px rgba(0,0,0,.08);
    }

    .card-wine .card-header {
        background: linear-gradient(135deg, var(--wine), var(--wine-2));
        color: #fff;
        border-bottom: 0;
    }

    .table-wine thead {
        background: rgba(90,15,27,.08);
        color: var(--wine);
    }

    .table-wine tbody tr:hover {
        background: rgba(90,15,27,.04);
    }

    .btn-wine {
        background: var(--wine);
        border-color: var(--wine);
        color: #fff;
    }

    .btn-wine:hover {
        background: var(--wine-2);
        border-color: var(--wine-2);
        color: #fff;
    }

    .btn-outline-wine {
        border: 1px solid var(--wine);
        color: var(--wine);
        background: transparent;
    }

    .btn-outline-wine:hover {
        background: var(--wine);
        border-color: var(--wine);
        color: #fff;
    }

    .btn-icon {
        width: 38px;
        height: 38px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        padding: 0;
    }

    .alert-wine {
        background-color: var(--wine-soft);
        border: 1px solid rgba(90,15,27,.25);
        color: var(--wine);
        border-radius: 14px;
        font-weight: 500;
    }

    .units-input {
        max-width: 110px;
        border-radius: 12px;
        border-color: rgba(90,15,27,.25);
    }

    .units-input:focus {
        border-color: var(--wine);
        box-shadow: 0 0 0 .2rem rgba(90,15,27,.18);
    }
</style>

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1" style="color:var(--wine); font-weight:800;">
                <i class="bi bi-droplet-half me-2"></i> Blood Availability
            </h2>
            <div class="text-muted">Manage current blood units in stock</div>
        </div>

        <a class="btn btn-wine px-4 text-white"
           asp-controller="Admin"
           asp-action="Dashboard">
            Go Back
        </a>
    </div>

    <div class="card card-wine">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                <i class="bi bi-clipboard2-pulse me-2"></i> Current Stock
            </h5>

            <span class="badge text-white px-3 py-2" style="background:linear-gradient(135deg,var(--wine),var(--wine-2));">
                <i class="bi bi-box-seam me-1"></i> Inventory
            </span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-wine mb-0">
                    <thead>
                        <tr>
                            <th style="width:70px;">SN</th>
                            <th>Blood Type</th>
                            <th style="width:160px;">Units Available</th>
                            <th class="text-center" style="width:220px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@sn</td>

                                    <td>
                                        <span class="badge text-white"
                                              style="background:linear-gradient(135deg,var(--wine),var(--wine-2));">
                                            @item.BloodType?.TypeName
                                        </span>
                                    </td>

                                    <td class="fw-semibold">
                                        @item.UnitsAvailable
                                    </td>

                                    <td class="text-center">
                                        <div class="d-inline-flex align-items-center gap-2 flex-wrap justify-content-center">
                                            <input type="number"
                                                   class="form-control units-input"
                                                   id="units_@item.Id"
                                                   min="0"
                                                   value="@item.UnitsAvailable"
                                                   title="Set units" />

                                            <button type="button"
                                                    class="btn btn-wine btn-icon"
                                                    title="Save"
                                                    onclick="setUnits(@item.Id)">
                                                <i class="bi bi-check2"></i>
                                            </button>

                                            <button type="button"
                                                    class="btn btn-outline-wine btn-icon"
                                                    title="Add +1"
                                                    onclick="addUnits(@item.Id, 1)">
                                                <i class="bi bi-plus-lg"></i>
                                            </button>

                                            <button type="button"
                                                    class="btn btn-outline-wine btn-icon"
                                                    title="Remove -1"
                                                    onclick="removeUnits(@item.Id, 1)">
                                                <i class="bi bi-dash-lg"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                sn++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4">
                                    <div class="alert alert-wine mb-0 d-inline-flex align-items-center gap-2">
                                        <i class="bi bi-info-circle"></i>
                                        No inventory data.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
<script>
    function postJson(url, payload) {
        return fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        }).then(r => r.json());
    }

    function setUnits(id) {
        const input = document.getElementById('units_' + id);
        const units = parseInt(input.value || '0', 10);
        if (isNaN(units) || units < 0) {
            alert('Units must be a number >= 0');
            return;
        }

        postJson('/Admin/UpdateInventoryUnits', { id: id, units: units })
            .then(res => {
                alert(res.message || 'Done');
                if (res.success) location.reload();
            })
            .catch(() => alert('Error'));
    }

    function addUnits(id, amount) {
        postJson('/Admin/AddInventoryUnits', { id: id, amount: amount })
            .then(res => {
                alert(res.message || 'Done');
                if (res.success) location.reload();
            })
            .catch(() => alert('Error'));
    }

    function removeUnits(id, amount) {
        postJson('/Admin/RemoveInventoryUnits', { id: id, amount: amount })
            .then(res => {
                alert(res.message || 'Done');
                if (res.success) location.reload();
            })
            .catch(() => alert('Error'));
    }
</script>
}
