@model Blood_Donations_Project.ViewModels.HospitalEdit

@{
    ViewData["Title"] = "Edit Hospital";
}

<style>
    :root { --wine:#5A0F1B; --wine-2:#7b1626; --wine-border:rgba(90,15,27,.18); }
    body { 
        background: radial-gradient(circle at top left, 
        rgba(90,15,27,.12), transparent 60%),
        linear-gradient(135deg, rgba(90,15,27,.06), rgba(90,15,27,.02));
           background-attachment: fixed; }
    .card-wine{ border-radius:18px; overflow:hidden; border:1px solid var(--wine-border); box-shadow:0 12px 40px rgba(0,0,0,.08);}
    .card-wine .card-header{ background:linear-gradient(135deg,var(--wine),var(--wine-2)); color:#fff; border-bottom:0;}
    .btn-wine{ background:var(--wine); border-color:var(--wine); color:#fff;}
    .btn-wine:hover{ background:var(--wine-2); border-color:var(--wine-2); color:#fff;}
    .btn-outline-wine{ border:1px solid var(--wine); color:var(--wine); background:transparent;}
    .btn-outline-wine:hover{ background:var(--wine); color:#fff;}
    .form-control{ border-radius:12px; border-color:rgba(90,15,27,.25); }
    .form-control:focus{ border-color:var(--wine); box-shadow:0 0 0 .2rem rgba(90,15,27,.18); }
</style>

<div class="container mt-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1" style="color:var(--wine); font-weight:800;">
                <i class="bi bi-pencil-square me-2"></i> Edit Hospital
            </h2>
            <div class="text-muted">Update hospital information</div>
        </div>

        <a class="btn btn-wine text-white"
           asp-controller="Admin"
           asp-action="Hospitals">
             Back
        </a>
    </div>

    <div class="card card-wine">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-building-gear me-2"></i> Hospital Info</h5>
        </div>

        <div class="card-body p-4">
            <form asp-controller="Admin" asp-action="EditHospital" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">UserName</label>
                        <input class="form-control" asp-for="UserName" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Full Name</label>
                        <input class="form-control" asp-for="FullName" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Mobile No</label>
                        <input class="form-control" asp-for="MobileNo" />
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">Address</label>
                        <input class="form-control" asp-for="Address" />
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-wine px-4">
                        <i class="bi bi-check2-circle me-1"></i> Save Changes
                    </button>

                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}