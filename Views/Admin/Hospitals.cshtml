@model List<Blood_Donations_Project.Models.User>

@{
    ViewData["Title"] = "Hospitals";
}

<style>
    :root {
        --wine: #5A0F1B;
        --wine-2: #7b1626;
        --wine-soft: rgba(90,15,27,.06);
        --wine-border: rgba(90,15,27,.18);
    }

    body {
        background: radial-gradient(circle at top left, rgba(90,15,27,.12), transparent 60%), linear-gradient(135deg, rgba(90,15,27,.06), rgba(90,15,27,.02));
        background-attachment: fixed;
    }

    .card-wine {
        border-radius: 18px;
        overflow: hidden;
        border: 1px solid var(--wine-border);
        box-shadow: 0 12px 40px rgba(0,0,0,.08);
    }

        .card-wine .card-header {
            background: linear-gradient(135deg, var(--wine), var(--wine-2));
            color: #fff;
            border-bottom: 0;
        }

    .btn-wine {
        background: var(--wine);
        border-color: var(--wine);
        color: #fff;
    }

        .btn-wine:hover {
            background: var(--wine-2);
            border-color: var(--wine-2);
            color: #fff;
        }

    .btn-outline-wine {
        border: 1px solid var(--wine);
        color: var(--wine);
        background: transparent;
    }

        .btn-outline-wine:hover {
            background: var(--wine);
            border-color: var(--wine);
            color: #fff;
        }

    .btn-icon {
        width: 38px;
        height: 38px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        padding: 0;
    }

    .alert-wine {
        background-color: var(--wine-soft);
        border: 1px solid rgba(90,15,27,.25);
        color: var(--wine);
        border-radius: 14px;
        font-weight: 500;
    }

    .table-wine thead {
        background: rgba(90,15,27,.08);
        color: var(--wine);
    }

    .table-wine tbody tr:hover {
        background: rgba(90,15,27,.04);
    }
</style>

<div class="container mt-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1" style="color:var(--wine); font-weight:800;">
                <i class="bi bi-hospital me-2"></i> Hospital Management
            </h2>
            <div class="text-muted">Hospitals list</div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-wine"
               asp-controller="Admin"
               asp-action="Dashboard">
                 Back
            </a>

            <a class="btn btn-wine"
               asp-controller="Admin"
               asp-action="AddHospital">
                <i class="bi bi-plus-circle me-1"></i> Add New Hospital
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-wine-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-wine-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Error"]
            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"></button>
        </div>
    }

    <div class="card card-wine">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                <i class="bi bi-building me-2"></i> All Hospitals
            </h5>
            <span class="badge text-white px-3 py-2" style="background:linear-gradient(135deg,var(--wine),var(--wine-2));">
                <i class="bi bi-hospital me-1"></i> Hospitals
            </span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-wine mb-0">
                    <thead>
                        <tr>
                            <th style="width:70px;">SN</th>
                            <th>Full Name</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th class="text-center" style="width:120px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int sn = 1;
                            foreach (var h in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@sn</td>
                                    <td>@(h.FullName ?? "-")</td>
                                    <td>@(h.UserName ?? "-")</td>
                                    <td>@(h.Email ?? "-")</td>
                                    <td>@(h.MobileNo ?? "-")</td>
                                    <td>@(h.Address ?? "-")</td>

                                    <td class="text-center">
                                        <a class="btn btn-wine btn-icon me-1"
                                           title="Edit"
                                           asp-controller="Admin"
                                           asp-action="EditHospital"
                                           asp-route-id="@h.UserId">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <button type="button"
                                                class="btn btn-outline-wine btn-icon"
                                                title="Delete"
                                                onclick="confirmDelete(@h.UserId)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>

                                sn++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="alert alert-wine mb-0 d-inline-flex align-items-center gap-2">
                                        <i class="bi bi-info-circle"></i>
                                        No hospitals found.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <form id="afForm" method="post">
        @Html.AntiForgeryToken()
    </form>

</div>

@section Scripts {
    <script>
        function getAntiForgeryToken() {
            const input = document.querySelector('#afForm input[name="__RequestVerificationToken"]');
            return input ? input.value : '';
        }

        function confirmDelete(id) {
            if (!confirm("Are you sure you want to delete this hospital?")) return;

            fetch('/Admin/DeleteHospital?id=' + id, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': getAntiForgeryToken()
                }
            })
                .then(() => {
                    window.location.reload();
                })
                .catch(() => alert("Error deleting hospital"));
        }
    </script>
}
