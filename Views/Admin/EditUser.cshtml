@model Blood_Donations_Project.ViewModels.EditUser

@{
    ViewData["Title"] = "Edit User";
    var bloodTypes = ViewBag.BloodTypes as IEnumerable<dynamic> ?? new List<dynamic>();
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1 text-wine fw-bold">
                <i class="bi bi-pencil-square me-2"></i> Edit User
            </h2>
            <div class="text-muted">Update user information</div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-wine px-4 text-white"
               asp-controller="Admin"
               asp-action="Users">
                Back
            </a>
        </div>
    </div>

    <div class="card card-wine">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-person-gear me-2"></i> Update User Info
            </h5>
        </div>

        <div class="card-body p-4">
            <form asp-controller="Admin" asp-action="EditUser" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="UserId" />

                <div class="row g-3">

                    <!-- Username / FullName -->
                    <div class="col-md-6">
                        <label class="form-label">UserName</label>
                        <input class="form-control" asp-for="UserName" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Full Name</label>
                        <input class="form-control" asp-for="FullName" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>

                    <!-- Email / Mobile -->
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Mobile No</label>
                        <input class="form-control" asp-for="MobileNo" />
                        <span class="text-danger" asp-validation-for="MobileNo"></span>
                    </div>

                    <!-- DOB -->
                    <div class="col-md-6">
                        <label class="form-label">Date of Birth</label>
                        <input class="form-control" asp-for="DateOfBirth" type="date" />
                        <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-md-6">
                        <label class="form-label">Address</label>
                        <input class="form-control" asp-for="Address" />
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>

                    <!-- Gender / BloodType -->
                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <select asp-for="Gender" class="form-select">
                            <option value=""> Select </option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>


                    <div class="col-md-6">
                        <label class="form-label">Blood Type</label>
                        <select class="form-select" asp-for="BloodTypeId">
                            <option value="">-- Select --</option>
                            @foreach (var bt in bloodTypes)
                            {
                                <option value="@bt.BloodTypeId" selected="@(Model.BloodTypeId == (int)bt.BloodTypeId)">
                                    @bt.TypeName
                                </option>
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="BloodTypeId"></span>
                    </div>                 

                    <!-- Health -->
                    <div class="col-md-12">
                        <label class="form-label">
                            Health Status <span class="text-muted">(optional)</span>
                        </label>
                        <textarea class="form-control" asp-for="HealthStatus" rows="2"></textarea>
                        <span class="text-danger" asp-validation-for="HealthStatus"></span>
                    </div>

                </div>

                <div class="d-flex flex-wrap gap-2 mt-4">
                    <button type="submit" class="btn btn-wine px-4">
                        <i class="bi bi-check2-circle me-1"></i> Save Changes
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}