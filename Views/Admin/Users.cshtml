@model List<Blood_Donations_Project.ViewModels.AdminUserRow>

@{
    ViewData["Title"] = "Donors";
}

<style>
    #healthStatusModal .card-header {
        flex-wrap: wrap;
        gap: .5rem;
    }

        #healthStatusModal .card-header h5 {
            margin: 0;
            display: flex;
            align-items: center;
            gap: .5rem;
            flex: 1 1 auto;
            min-width: 0;
        }
</style>


<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1" style="color:var(--wine); font-weight:800;">
                <i class="bi bi-people me-2"></i> Users Management
            </h2>
            <div class="text-muted">Donors list</div>
        </div>

        <a class="btn btn-wine px-4 text-white"
           asp-controller="Admin"
           asp-action="Dashboard">
            Back
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-wine-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card card-wine">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">
                <i class="bi bi-person-badge me-2"></i> All Donors
            </h5>
            <span class="badge text-white px-3 py-2" style="background:linear-gradient(135deg,var(--wine),var(--wine-2));">
                <i class="bi bi-droplet-half me-1"></i> Donors
            </span>
        </div>

        <form id="antiForgeryForm">
            @Html.AntiForgeryToken()
        </form>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-wine mb-0">
                    <thead>
                        <tr>
                            <th style="width:70px;">SN</th>
                            <th>Full Name</th>
                            <th>UserName</th>
                            <th>Email</th>
                            <th>Mobile No</th>
                            <th>Address</th>
                            <th style="width:140px;">Date of Birth</th>
                            <th style="width:120px;">Blood Type</th>
                            <th style="width:110px;">Gender</th>
                            <th class="text-center" style="width:170px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int sn = 1;

                            foreach (var u in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@sn</td>
                                    <td>@(u.FullName ?? "-")</td>
                                    <td>@(u.UserName ?? "-")</td>
                                    <td>@(u.Email ?? "-")</td>
                                    <td>@(u.MobileNo ?? "-")</td>
                                    <td>@(u.Address ?? "-")</td>

                                    <td>
                                        @(u.DateOfBirth.HasValue ? u.DateOfBirth.Value.ToString("dd/MM/yyyy") : "-")
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(u.BloodTypeName))
                                        {
                                            <span class="badge text-white"
                                                  style="background:linear-gradient(135deg,var(--wine),var(--wine-2));">
                                                @u.BloodTypeName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>

                                    <td>
                                        @(u.Gender?.ToString() ?? "-")
                                    </td>

                                    <td class="text-center">
                                        <button type="button"
                                                class="btn btn-outline-wine btn-icon-md me-1"
                                                title="Health Status"
                                                data-bs-toggle="modal"
                                                data-bs-target="#healthStatusModal"
                                                data-name="@(u.FullName ?? u.UserName ?? "Donor")"
                                                data-health="@((u.HealthStatus ?? "").Replace("\"", "&quot;"))">
                                            <i class="bi bi-clipboard2-pulse"></i>
                                        </button>

                                        <a class="btn btn-outline-wine btn-icon-md me-1"
                                           title="Edit"
                                           asp-controller="Admin"
                                           asp-action="EditUser"
                                           asp-route-id="@u.UserId">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <button type="button"
                                                class="btn btn-wine btn-icon-md"
                                                title="Delete"
                                                onclick="confirmDelete(@u.UserId)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>

                                sn++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center py-4">
                                    <div class="alert alert-wine mb-0 d-inline-flex align-items-center gap-2">
                                        <i class="bi bi-info-circle"></i>
                                        No donors found.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<!-- Health Status Modal -->
<div class="modal fade" id="healthStatusModal" tabindex="-1" aria-labelledby="healthStatusModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content card-wine">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-1" id="healthStatusModalLabel">
                    <i class="bi bi-clipboard2-pulse me-2"></i> Health Status
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-4">
                <div class="text-muted mb-2" id="hsDonorName"></div>
                <div class="alert alert-wine mb-0" id="hsText"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-wine" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (!confirm("Are you sure you want to delete this donor?")) return;

            fetch('/Admin/DeleteUser?id=' + id, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken':
                        document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
                .then(r => r.json())
                .then(res => {
                    alert(res.message);
                    if (res.success) location.reload();
                })
                .catch(() => alert("Error deleting donor"));
        }

        const healthModal = document.getElementById('healthStatusModal');
        if (healthModal) {
            healthModal.addEventListener('show.bs.modal', function (event) {
                const btn = event.relatedTarget;
                const name = btn.getAttribute('data-name') || 'Donor';
                const health = btn.getAttribute('data-health') || '';

                document.getElementById('hsDonorName').textContent = `Donor: ${name}`;

                const text = health.trim() ? health : 'No health status provided.';
                document.getElementById('hsText').textContent = text;
            });
        }
    </script>
}