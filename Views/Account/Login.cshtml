@model Blood_Donations_Project.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">Login</h3>

                <form asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        </div>

                        <div class="d-flex justify-content-end mb-3">
                            <a asp-controller="Account" asp-action="ForgotPassword" class="text-danger fw-bold">
                                Forgot Password?
                            </a>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-danger w-100">Login</button>
                </form>

                <div class="text-center mt-3">
                    <span>Don't have an account?</span>
                    <a asp-action="Register" class="text-danger fw-bold">Register</a>
                </div>

            </div>
        </div>
    </div>
</div>