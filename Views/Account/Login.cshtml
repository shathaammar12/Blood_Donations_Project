@model Blood_Donations_Project.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
  .auth-page.login-page {
      padding: 24px 0 !important; 
      display: flex !important;
      align-items: center !important;
      min-height: 100vh !important;
  }

  .login-page .auth-left,
  .login-page .auth-left .auth-slogan,
  .login-page .auth-left .auth-sub,
  .login-page .auth-left .auth-brand-badge span {
      color: #fff !important;
      opacity: 1 !important;
  }

  @@media (min-width: 992px) {
      .login-page .auth-card,
      .login-page .auth-right,
      .login-page .auth-left {
          height: auto !important;
          max-height: none !important;
      }

      .login-page .auth-form .form-control,
      .login-page .auth-form .form-select {
          height: auto !important;
          font-size: 1rem !important;
          padding: 11px 14px !important;
      }

      .login-page .auth-form .form-label {
          font-size: 1rem !important;
          margin-bottom: .5rem !important;
      }

      .login-page .btn-wine {
          font-size: 1rem !important;
          padding: 11px 14px !important;
      }

      .login-page .auth-title {
          font-size: 1.85rem !important;
          margin-bottom: .4rem !important;
      }

      .login-page .auth-muted {
          font-size: 1rem !important;
          margin-bottom: 1rem !important;
      }

      .login-page .auth-right {
          display: flex !important;
          flex-direction: column !important;
          justify-content: center !important;
      }
  }

  .login-page a.link-wine,
  .login-page a.link-wine:visited,
  .login-page a.link-wine:active,
  .login-page a.link-wine:focus {
      color: var(--wine2) !important;
  }

  .login-page a.link-wine:hover {
      color: var(--wine) !important;
  }
</style>


<div class="auth-page login-page">
    <div class="container">
        <div class="auth-card row g-0">

            <div class="col-lg-6 auth-left d-flex align-items-end">
                <div class="p-4 p-lg-5">
                    <div class="auth-brand-badge mb-3">
                        <i class="bi bi-droplet-half"></i>
                        <span>Blood Donation System</span>
                    </div>

                    <h1 class="auth-slogan font-special">
                        Your Blood Can Bring Smile In Any One Person Face
                    </h1>

                    <p class="auth-sub mb-0">
                        Sign in to manage requests, availability, and users in a clean and secure way.
                    </p>
                </div>
            </div>

            <div class="col-lg-6 auth-right">
                <h3 class="auth-title">Login</h3>
                <p class="auth-muted mb-4">Welcome back!</p>

                <form asp-controller="Account" asp-action="Login" method="post" class="auth-form">
                    @Html.AntiForgeryToken()

                    @if (!ViewData.ModelState.IsValid &&
                    ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
                    {
                        <div class="alert alert-danger rounded-3 py-2 mb-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Invalid email or password.
                        </div>
                    }


                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email"
                               class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")"
                               placeholder="Enter your email"
                               autocomplete="username" />
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password"
                               class="form-control @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : "")"
                               placeholder="Enter your password"
                               autocomplete="current-password" />
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                            <label asp-for="RememberMe" class="form-check-label" for="rememberMe">
                                Remember Me
                            </label>
                        </div>

                        <a asp-controller="Account" asp-action="ForgotPassword"
                           class="link-wine fw-semibold text-decoration-underline">
                            Forgot Password?
                        </a>
                    </div>

                    <button type="submit" class="btn btn-wine w-100 text-white">
                         Login
                    </button>
                </form>

                <div class="text-center mt-3">
                    <span class="text-muted">Don't have an account?</span>
                    <a asp-action="Register" class="link-wine fw-bold ms-1">Register</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var firstError = document.querySelector(".is-invalid");
            if (firstError) {
                firstError.focus();
            }
        });
    </script>
}

