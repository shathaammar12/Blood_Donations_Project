@model Blood_Donations_Project.ViewModels.BloodRequestViewModel

@{
    ViewData["Title"] = "Request Blood";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow border-danger border-2">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Request Blood</h5>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-4">
                        Your request will be reviewed by the admin.
                    </p>

                    <form asp-controller="Hospital" asp-action="RequestBlood" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="BloodTypeId" class="form-label"></label>
                            <select asp-for="BloodTypeId" asp-items="ViewBag.BloodTypes" class="form-select">
                                <option value="">Select blood type</option>
                            </select>
                            <span asp-validation-for="BloodTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" placeholder="Enter quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                Submit Request
                            </button>

                            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
