@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center mt-5">
    <h1 class="display-5 fw-bold">Blood Donation Management System</h1>
    <p class="lead mt-3">
        Connecting donors, hospitals, and blood banks to save lives.
    </p>
</div>

<div class="row mt-5">
    @* Admin Card *@
    <div class="col-md-4 mb-3">
        <div class="card text-center shadow h-100">
            <div class="card-body">
                <h5 class="card-title">Admin</h5>
                <p class="card-text">Manage donations and blood requests efficiently.</p>
            </div>
        </div>
    </div>

    @* Donor Card *@
    <div class="col-md-4 mb-3">
        <div class="card text-center shadow h-100">
            <div class="card-body">
                <h5 class="card-title">Donors</h5>
                <p class="card-text">Register and donate blood to save lives.</p>
            </div>
        </div>
    </div>

    @* Hospital Card *@
    <div class="col-md-4 mb-3">
        <div class="card text-center shadow h-100">
            <div class="card-body">
                <h5 class="card-title">Hospitals</h5>
                <p class="card-text">Request blood easily and track availability.</p>
            </div>
        </div>
    </div>
</div>
